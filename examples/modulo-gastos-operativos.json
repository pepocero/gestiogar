      "required": false,
      "description": "Si se subió la factura",
      "options": [
        {"value": "si", "label": "Sí"},
        {"value": "no", "label": "No"}
      ]
    },
    {
      "name": "observaciones",
      "label": "Observaciones",
      "type": "textarea",
      "required": false,
      "description": "Notas adicionales"
